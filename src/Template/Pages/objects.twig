{% if Poster.exists(object) %}
    <div class="w-full">
        <img class="explode-x h-2 p-0 cover poster-target" alt="" src="{{ Poster.url(object) }}" />
    </div>

    <article class="column w-8 gap-2">
        <header class="column gap-0">
            <h1 class="m-0 f-7 serif regular italic">{{ object.title|raw }}</h1>
            <div class="m-0 f-6 serif regular body">
                {{ object.description|raw }}
            </div>
        </header>

        <div class="column serif f-3 body">
            {{ Text.renderBody(object.body, {
                downgradeHeadings: 2,
            })|raw }}
        </div>
    </article>
{% endif %}
