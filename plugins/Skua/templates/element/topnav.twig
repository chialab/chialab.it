<header class="topnav mono">
    <nav>
        <a class="logo" href="/">
            {{ element('skua-logo')|raw }}
            <strong>SKUA</strong>
            <span>1852</span>
        </a>
        {% if journeys|default([])|length > 0 %}
            <skua-menu>
                {% for journey in journeys %}
                    <a href="{{ Url.build({'_name': 'pages:journey', 'uname': journey.uname}) }}"
                        aria-current="{{ currentJourney is defined and journey.uname == currentJourney.uname ? 'page' : 'false' }}"
                        slot="item"
                    >{{ journey.title|default(journey.uname) }}</a>
                {% endfor %}
                <a href="{{ Url.build({'_name': 'pages:tracking'}) }}"
                    class="tracking"
                    aria-current="{{ _view.getRequest().getPath() == '/tracking' ? 'page' : 'false' }}"
                    slot="item"
                >Tracking</a>
            </skua-menu>
        {% endif %}
    </nav>
</header>
