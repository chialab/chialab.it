{% if illustratorsByLetter|length > 0 %}
    <section class="w-full column">
        <h2 class="m-0 mono bold f-1 bb-1 py-2 w-full">{{ folder.title }} /</h2>

        <div class="illustrators w-full">
        {% for letter, illustrators in illustratorsByLetter %}
            <div class="illustrators-list">
                <h4 class="text-accent mono bold my-1">{{ letter }}</h4>
                <ul>
                {% for illustrator in illustrators %}
                    <li>
                        <a class="mono" href="{{ Url.build({ _name: 'pages:objects', _entity: illustrator }) }}">
                            {% if illustrator.get('name') %}
                                {{ illustrator.get('name') }}
                            {% endif %}
                            {% if illustrator.get('surname') %}
                                <span class="bold">{{ illustrator.get('surname') }}</span>
                            {% endif %}
                            {% if illustrator.get('name') is empty
                                and illustrator.get('surname') is empty
                                and illustrator.get('pseudonym') is empty
                            %}
                                {{ illustrator.get('title') }}
                            {% endif %}
                        </a>
                    </li>
                {% endfor %}
                </ul>
            </div>
        {% endfor %}
        </div>
        <div class="w-full row end mt-2">
            <a class="link--section" href="{{ Url.build({ _name: 'pages:objects', _entity: folder }) }}">{{ __('see all') }}</a>
        </div>
    </section>
{% endif %}
