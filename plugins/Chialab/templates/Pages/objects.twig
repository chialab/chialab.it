{% if Poster.exists(object) %}
    {{ element('Articles/cover') }}
{% endif %}

<article class="column w-8 gap-2">
    {{ element('Articles/header', {
        title: object.title,
        description: object.get('description'),
    }) }}

    {% if object.get('body') is not empty %}
        {{ element('Articles/body') }}
    {% endif %}

    {% if object.get('has_media') is not empty %}
        {{ element('Articles/has_media') }}
    {% endif %}
</article>
<aside class="column w-4 aside f-s">
    {{ element('Articles/aside') }}
</aside>
