{% set children = folder.get(relation|default('children')) %}

{% if folder.get('layout') == 'masonry' %}
    {{ element('folder-masonry', { children: children })|raw }}
{% elseif folder.get('layout') == 'list' %}
    {{ element('folder-list', { children: children })|raw }}
{% else %}
    {{ element('folder-grid', { children: children, columns: columns|default(4) })|raw }}
{% endif %}
